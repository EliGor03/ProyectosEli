<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".idiomas">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBanderaEspanol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_espanol" />


            <TextView
                android:id="@+id/etEspanol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#0000cc"
                android:text="Castellano"
                android:contentDescription="Castellano"
                />

            <Switch
                android:id="@+id/swEspanol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBanderaJapones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_japones" />


            <TextView
                android:id="@+id/etJapones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#0000cc"
                android:text="Japones   "
                android:contentDescription="Japones"
                />

            <Switch
                android:id="@+id/swJapones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBanderaCoreano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_koreano" />


            <TextView
                android:id="@+id/etCoreano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#0000cc"
                android:text="Coreano   "
                android:contentDescription="Coreano"
                />

            <Switch
                android:id="@+id/swCoreano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBanderaFrances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_espanol" />


            <TextView
                android:id="@+id/etFrances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#0000cc"
                android:text="Frances   "
                android:contentDescription="Frances"
                />

            <Switch
                android:id="@+id/swFrances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBanderaHolandes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_holandes" />


            <TextView
                android:id="@+id/etHolandes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#0000cc"
                android:text="Holandes  "
                android:contentDescription="Holandes"
                />

            <Switch
                android:id="@+id/swHolandes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBanderaItaliano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_italiano" />


            <TextView
                android:id="@+id/etItaliano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#0000cc"
                android:text="Italiano  "
                android:contentDescription="Italiano"
                />

            <Switch
                android:id="@+id/swItaliano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBanderaIngles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_ingles" />


            <TextView
                android:id="@+id/etIngles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#0000cc"
                android:text="Ingles    "
                android:contentDescription="Ingles"
                />

            <Switch
                android:id="@+id/swIngles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBanderaRuso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/img_ruso" />


            <TextView
                android:id="@+id/etRuso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#0000cc"
                android:text="Ruso      "
                android:contentDescription="Ruso"
                />

            <Switch
                android:id="@+id/swRuso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>





    </LinearLayout>

</RelativeLayout>
